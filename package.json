{
  "private": true,
  "name": "project_new_skeleton_typescript",
  "version": "1.0.0",
  "description": "TypeScript project skeleton",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "rm -rf dist && tsc && yarn webpack:prod && npm run analyze -- --exclude dist",
    "test": "nyc mocha \"test/**/*.ts\"",
    "test:web": "tsc -p ./tsconfig.wtr.json && wtr --coverage",
    "webpack": "webpack --mode development --config webpack.config.js",
    "webpack:prod": "webpack --mode production --config webpack.config.js",
    "cleanup": "rm -rf ./dist coverage ./node_modules, .nyc_output"
  },
  "author": "Jun Kurihara",
  "license": "MIT",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.4.17",
    "@open-wc/testing": "next",
    "@types/chai": "4.2.22",
    "@types/mocha": "9.0.0",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "@web/test-runner": "next",
    "add": "2.0.6",
    "chai": "4.3.4",
    "concurrently": "5.3.0",
    "eslint": "8.4.1",
    "mocha": "9.1.3",
    "nyc": "15.1.0",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "typescript": "4.5.2",
    "webpack": "5.65.0",
    "webpack-cli": "4.9.1",
    "yarn": "1.22.17"
  },
  "dependencies": {},
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "sourceMap": true,
    "report-dir": "coverage/nyc"
  },
  "customElements": "custom-elements.json"
}
